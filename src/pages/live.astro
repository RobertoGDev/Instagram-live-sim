---
import BaseLayout from '@/src/layouts/BaseLayout.astro';
import HeaderLive from '@/src/components/HeaderLive.astro';
import Camera from '@/src/components/Camera.astro';
import Comments from '@/src/components/Comments.jsx';
import SideReactions from '@/src/components/SideReactions';
---

<BaseLayout>
    <section class="relative grid grid-cols-6 grid-rows-[1fr_3fr_3fr_1fr] h-full w-full overflow-hidden text-white bg-black">
        <div class="header-live absolute z-1 col-start-1 col-span-6 row-start-1 flex flex-row px-4 w-full justify-between items-center text-xl">
            <HeaderLive />
        </div>
        <div class="camera-live col-start-1 col-span-6 row-start-1 row-span-3 text-xl h-full overflow-hidden rounded-b-xl">
            <Camera />
        </div>
        <div class="comments col-start-1 col-span-6 row-start-3 text-xl overflow-hidden max-h-[calc(100%-)]">
            <Comments client:load />
        </div>
        <div class="relative reactions z-10 col-start-6 row-start-2 row-span-2 text-xl overflow-hidden max-h-[calc(100%-)]">
            <SideReactions client:load />
        </div>
    </section>
</BaseLayout>

